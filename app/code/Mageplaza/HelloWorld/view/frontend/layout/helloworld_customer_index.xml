<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>User Carts</title>
<!--        <css src="css/custom.css"  src_type="url" rel="stylesheet" type="text/css" />-->
        <css src="Mageplaza_HelloWorld::css/custom.css"/>
        <css src="Mageplaza_HelloWorld::css/bootstrap.min.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="mageplaza.helloworld.block.test"
                   template="Mageplaza_HelloWorld::mytab.phtml" >
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="custom-knockout" xsi:type="array">
                                <item name="component" xsi:type="string">Mageplaza_HelloWorld/js/custom</item>
                                <item name="template" xsi:type="string">Mageplaza_HelloWorld/custom</item>
                                <item name="config" xsi:type="array">
                                    <item name="custommessage" xsi:type="string" translate="true">Custom message from Xml</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
